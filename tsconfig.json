{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {

        "target": "ES2015",
        "module": "commonjs",

        "outDir": "dist",

        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true
    }
}